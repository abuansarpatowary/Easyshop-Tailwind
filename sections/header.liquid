                                <div>
                                    <ul class="space-y-3">
                                        <li class="flex items-center">
                                            <span class="text-xl">üî•</span>
                                            <a href="#" class="ml-3 text-gray-700 hover:text-blue-600">Use cases</a>
                                        </li>
                                        <li class="flex items-center">
                                            <span class="text-xl">üìñ</span>
                                            <a href="#" class="ml-3 text-gray-700 hover:text-blue-600">Blog</a>
                                        </li>
                                        <li class="flex items-center">
                                            <span class="text-xl">‚ù§Ô∏è</span>
                                            <a href="#" class="ml-3 text-gray-700 hover:text-blue-600">Testimonials</a>
                                        </li>
                                    </ul>
                                </div>
                                <div>
                                    <ul class="space-y-3">
                                        <li class="flex items-center">
                                            <span class="text-xl">ü§ò</span>
                                            <a href="#" class="ml-3 text-gray-700 hover:text-blue-600">Features</a>
                                        </li>
                                        <li class="flex items-center">
                                            <span class="text-xl">üòé</span>
                                            <a href="#" class="ml-3 text-gray-700 hover:text-blue-600">Team</a>
                                        </li>
                                        <li class="flex items-center">
                                            <span class="text-xl">üí∞</span>
                                            <a href="#" class="ml-3 text-gray-700 hover:text-blue-600">Plans</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <a href="{{ link.url }}" class="text-gray-600 hover:text-blue-600 py-4">{{ link.title }}</a>
                {% endif %}
            {% endfor %}
        </nav>

        <!-- Cart, Login for Desktop -->
        <div class="hidden lg:flex space-x-4">
            <!-- Cart -->
            <a href="{{ routes.cart_url }}" class="flex items-center text-gray-600 hover:text-blue-600 space-x-2">
                {%- render 'cart-icon' -%}
                <span>Cart</span>
            </a>
            <!-- Login -->
            <a href="{{ routes.account_url }}" class="flex items-center text-gray-600 hover:text-blue-600 space-x-2">
                {% render 'profile-icon' %}
                <span>Login</span>
            </a>
        </div>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden lg:hidden bg-white shadow-md p-4">
        <div class="flex flex-col space-y-2">
            {% for link in linklists.main-menu.links %}
                <a href="{{ link.url }}" class="text-gray-600 hover:text-blue-600">{{ link.title }}</a>
            {% endfor %}
            <!-- Cart, Login for Mobile -->
            <a href="{{ routes.cart_url }}" class="flex items-center text-gray-600 hover:text-blue-600 space-x-2">
                {%- render 'cart-icon' -%}
                <span>Cart</span>
            </a>
            <a href="{{ routes.account_url }}" class="flex items-center text-gray-600 hover:text-blue-600 space-x-2">
                {% render 'profile-icon' %}
                <span>Login</span>
            </a>
        </div>
    </div>
</header>

{% javascript %}
     const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    mobileMenuButton.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
    });
{% endjavascript %}